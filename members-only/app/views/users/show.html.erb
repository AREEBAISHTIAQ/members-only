<% provide(:title, @users.name ) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @users %>
        <%= @users.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @users.posts.any? %>
        <h3>Posts (<%= @users.posts.count %>)</h3>
        <ol class="posts">
        <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
    <% end %>
  </div>
</div>